@page "/readuser/{id}"
@inject NavigationManager nav

@code
{
    [Parameter]
    public string? id { get; set; }

    CRUD.Shared.Models.UserModel user = new();

    protected async override void OnInitialized()
    {
        int Uid = int.Parse(id?? "0");
        var u = await CRUD.Access.Controllers.User.Read(Uid);
        user = u;
        StateHasChanged();
        await base.OnInitializedAsync();
    }


    private void editView()
    {
        nav.NavigateTo("/create");
    }

    private void deleteView()
    {
        nav.NavigateTo("/read");
    }

    private void readAllView()
    {
        nav.NavigateTo("/read");
    }
}

<div>
    <h1>Información de: @user.Name</h1>

    <p class="Name">Name: @user.Name</p>
    <p class="Email">Email: @user.Email</p>
    <p class="PhoneNumber">Phone Number: @user.PhoneNumber</p>

    <button @onclick="editView">Editar</button>
    <button @onclick="deleteView">Eliminar</button>
    <button @onclick="readAllView">Cancelar</button>
</div>
