@page "/Users/Read"
@inject NavigationManager nav

@code {

    List<CRUD.Shared.Models.UserModel> Usuarios = new();

    protected async override Task OnInitializedAsync()
    {
        var users = await CRUD.Access.Controllers.User.ReadAll();
        Usuarios = users;
        await base.OnInitializedAsync();
    }

    private void menuView()
    {
        nav.NavigateTo("/");
    }
}

<div>

    <h1>Read all users</h1>

    @foreach(CRUD.Shared.Models.UserModel user in Usuarios)
    {
        <UserCard DataUser="user"/>
    }

    <button @onclick="menuView">Cancel</button>

</div>